<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-one-third">
        <div class="nhsuk-panel current">
          <p class="course-type">
            <a asp-action="Current" class="nhsuk-u-font-size-32">Current</a>
          </p>
        </div>
      </div>
      <div class="nhsuk-grid-column-one-third">
        <div class="nhsuk-panel completed">
          <p class="course-type">
            <a asp-action="Completed" class="nhsuk-u-font-size-32">Completed</a>
          </p>
        </div>
      </div>
      <div class="nhsuk-grid-column-one-third">
        <div class="nhsuk-panel available">
          <p class="course-type">
            <a asp-action="Available" class="nhsuk-u-font-size-32">Available</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
