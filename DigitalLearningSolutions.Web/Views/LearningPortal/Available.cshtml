@using DigitalLearningSolutions.Web.ViewModels.LearningPortal
@model AvailableViewModel

@{
  ViewData["Title"] = "Learning Portal - Available";
}

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-full">
    <h1>Available Courses</h1>
    <h2 class="page-subheading">@Model.BannerText</h2>
    @foreach (var availableCourse in Model.AvailableCourses)
    {
      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-one-quarter">
          <div class="nhsuk-panel">
            <span class="nhsuk-u-font-size-32">@availableCourse.Id.ToString("N0")</span>
            <span class="nhsuk-body-s">@availableCourse.Name</span>
          </div>
        </div>
      </div>
    }
  </div>
</div>
