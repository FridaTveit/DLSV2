@using DigitalLearningSolutions.Web.ViewModels.LearningPortal
@model CurrentViewModel

<div class="nhsuk-form-group">
  <form method="get">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-full">

        <div class="nhsuk-grid-row">
          <div class="nhsuk-grid-column-one-half">
            <label class="nhsuk-label--s label-reduced-margin" id="label-sort-by">
              Sort by:
            </label>
          </div>
        </div>

        <div class="nhsuk-grid-row">
          <div class="nhsuk-grid-column-one-quarter nhsuk-u-padding-top-1">
            <select class="nhsuk-select" id="select-sort-by" asp-for="SortBy" asp-items="Model.SortByOptions" aria-labelledby="label-sort-by"></select>
          </div>
          <div class="nhsuk-grid-column-one-quarter nhsuk-u-padding-top-1">
            <select class="nhsuk-select" id="select-sort-direction" asp-for="SortDirection" aria-label="Sort Direction">
              <option value="Ascending">Ascending</option>
              <option value="Descending">Descending</option>
            </select>
          </div>

          <div class="non-js-only">
            <div class="nhsuk-grid-column-one-quarter nhsuk-u-padding-top-1">
              <button class="nhsuk-button nhsuk-button--secondary button-small"
                      type="submit"
                      name="sort-button"
                      asp-action="Current"
                      asp-controller="LearningPortal">
                Sort
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
